FROM continuumio/miniconda3
#FROM python:3.9.13
WORKDIR /home/dev/project/tender


SHELL ["conda", "run", "-n", "env", "/bin/bash", "-c"]


COPY Anaconda3-2022.10-Linux-x86_64.sh /home/dev/project/tender

RUN conda create -n env34 python=3.9
RUN conda activate env34

COPY manage.py /home/dev/project/tender

ENTRYPOINT [ "source", "activate", "env34" ]

CMD [ "python", "manage.py", "runserver" ]

